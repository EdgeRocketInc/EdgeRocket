<div class="col-lg-12">

  <div class="panel panel-info"> <!-- Profile update mode -->
    <div class="panel-heading">User profile</div>
    <div class="panel-body" ng-controller="ProfileCtrl">
      <div  align="right" ng-controller="UploadCtrl">
        <div style="position:absolute;left:0;right:0;margin-left:87%;margin-right:13%;">
          <button id="main_photo_btn" class="btn btn-primary btn-sm">Select photo</button>
        </div>
        <div>
          <input id="photo_btn" style="opacity: 0;" type="file" ng-model="files" file-change>
        </div>
        <div id="file-list">
          <img id="Photo" src="get_profile_photo" width="22" height="22"/>
        </div>
      </div>

      <form role="form" style="text-align:center;margin: 0 auto;">

          <!-- Inline Edit mode -->

        <div class="col-md-6" >
          <input type="text" class="form-control form-control-49pct" placeholder="First Name"
                 ng-model="user.first_name">
          </input>
          <input type="text" class="form-control form-control-49pct" placeholder="Last Name"
                 ng-model="user.last_name">
          </input>
          <input type="text" class="form-control form-control-49pct" placeholder="Title"
                 ng-model="profile.title">
          </input>
          <input type="text" class="form-control form-control-49pct" placeholder="Employee Id"
                 ng-model="profile.employee_id">
          </input>

        </div>
      </form>
      <div class="row">
        <div class="col-md-6" align="center">
                <span class="pull-center">
                      <button class="btn btn-success pull-center" ng-click="updateProfile(user,profile)">Save</button>
                      <button class="btn btn-warning pull-center" ng-click="cancel()">Cancel</button>
                </span>
        </div>
      </div>
    </div>
  </div> <!-- Panel -->
</div>