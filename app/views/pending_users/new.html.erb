<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center voffset3">
      <%= image_tag('ER_final_logo-crop-224x43.png') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center voffset3">
      <div class="panel panel-primary">
          <div class="panel-heading">
            <% if params["type"]=='growth' %>
              User Acquisition Judo - 
            <% end %>
            Registration
          </div>
        <%= form_for(@pending_user, url: sign_up_path) do |f| %>
          <div class="panel-body">
            <%= f.hidden_field :user_type, :value => params["type"] %>
            <div class="has-warning">
              <%= f.text_field :first_name, autofocus: true, class: 'form-control voffset1', placeholder: 'First Name (required)' %>
              <%= f.text_field :last_name, autofocus: true, class: 'form-control voffset1', placeholder: 'Last Name (required)' %>
            </div>
            <% if params["type"] == 'common' %>
              <%= f.hidden_field :company_name, value: 'Startup' %>
            <% else %>
              <%= f.text_field :company_name, autofocus: true, class: 'form-control voffset1', placeholder: 'Company Name (optional)' %>
            <% end %>
            <div class="has-warning">
              <%= f.email_field :email, autofocus: true, class: 'form-control voffset1', placeholder: 'Email (required)' %>
            </div>
            <div class="voffset2">
              <%= f.submit "Sign up", class: 'btn btn-danger form-control' %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

