<!-- DASH -->
<div class="container-fluid" ng-controller="DashboardCtrl">

	<div class="row">
	  	<div class="col-lg-6">
			<div class="panel panel-info">
				<!-- TODO -->
	  			<div class="panel-heading"><%= @account.company_name if !@account.nil? %> Users</div>
	  			<div class="panel-body">
					<table class="table table-condensed">
						<thead>
							<tr>
								<!-- TODO remove demo multiplier -->
								<th>Total Users</th>
								<th><%= @users[:total_count] %></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>Admin Users</td>
								<td><%= @users[:num_admins] %></td>
							</tr>
							<tr>
								<td>Standard Users</td>
								<td><%= @users[:total_count] - @users[:num_admins] %></td>
							</tr>
						</tbody>
					</table>
					<button class="btn btn-primary btn-sm" ng-click="manageUsers()">Manage Users</button>
				</div>
			</div>
		</div>

