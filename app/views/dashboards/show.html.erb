<!-- DASH -->
<div class="container-fluid" ng-controller="DashboardCtrl">

  <div class="row">
  <div class="col-lg-6">
	<div class="panel panel-info">
  		<div class="panel-heading">CompanyABC - Users</div>
  		<div class="panel-body">
			<table class="table table-condensed">
				<thead>
					<tr>
						<th>Total Users</th>
						<th><%= @users[:total_count] =%></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>Admin Users</td>
						<td><%= @users[:num_admins] =%></td>
					</tr>
					<tr>
						<td>Standard Users</td>
						<td><%= @users[:num_standard] =%></td>
					</tr>
				</tbody>

			</table>
			<button class="btn btn-primary btn-sm">Manage</button>
	</div>
	</div>
</div>
<div class="col-lg-6">
	<div class="panel panel-info">
  		<div class="panel-heading">Budget</div>
  		<div class="panel-body">Panel content</div>
	</div>
</div>
<div class="col-lg-6">
	<div class="panel panel-info">
  		<div class="panel-heading">Number of Courses per user</div>
  		<div class="panel-body">Panel content</div>
	</div>
</div>
<div class="col-lg-6">
	<div class="panel panel-info">
  		<div class="panel-heading">Course Activity {{ chartType }}</div>
  		<div class="panel-body">
 		    <div ac-chart="chartType" ac-data="chartData" ac-config="config" id="chart" class="chart" style="width: 100%; height:400px;"></div>
  		</div>
	</div>
</div>
<div class="col-lg-6">
	<div class="panel panel-info">
  		<div class="panel-heading">Number of Classes by Course Topic</div>
  		<div class="panel-body">Panel content</div>
	</div>
</div>
<div class="col-lg-6">
	<div class="panel panel-info">
  		<div class="panel-heading">Number of Classes by Company Department</div>
  		<div class="panel-body">Panel content</div>
	</div>
</div>

</div>
</div>