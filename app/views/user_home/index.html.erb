<!-- Modal Survey window -->
<script type="text/ng-template" id="userSurvey.html">
  <div class="modal-header">
    <small class="pull-right text-muted"> It takes less than 1 minute</small
    <h4>Preferences</h4>
  </div>
  <div class="modal-body">
    <p>Please indicate the business and technical topics that you are interested in (you can select all that apply):</p>
    <div class="row">
      <div class="col-xs-4" ng-repeat="col in [0,1,2]">
        <ul class="padding-left3">
          <li class="list-leaf" ng-repeat="thing in skills[col]">
            <input type="checkbox" value="{{thing.key_name}}" ng-model="thing.checked" name="stuff" id="{{thing.key_name}}"/>
              {{thing.name}}
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-8">
        <input type="text" placeholder="other" class="padding-left3 input-sm" ng-model="otherSkill">
      </div>
    </div>
  </div>
  <div class="modal-footer" ng-show="surveySaved==true">
      <span class="text-success pull-left">* Thanks! Based on your preferences, we&#39;ll send you an email with EdgeRocket content recommendations.</span>
      <button class="btn btn-sm btn-warning" ng-click="cancel()">Close</button>
  </div>
  <div class="modal-footer" ng-show="surveySaved!=true">
      <button class="btn btn-success" ng-click="done()" ng-disabled="showSubmit==false" id="submit-survey">Submit</button>
      <button class="btn btn-sm btn-warning" ng-click="cancel()">Skip this time</button>
  </div>
</script>

<!-- Main content area -->
<div class="container-fluid" ng-controller="IndexCtrl">

  <form>
    <div class="row">
      <div class="col-md-7 col-lg-6 col-lg-offset-1">
        <a href="/user_playlists" class="btn btn-default indent-left voffset3" 
        popover-placement="right" popover="The playlists are curated collections of content about specific job functions or important topics." popover-title="How to use Playlists" popover-trigger="mouseenter">
          <%= image_tag('ic_list_grey600_48dp.png') =%>
          <span class="text-large indent-left home-font">Company Playlists</span>
        </a>
        <br/>
        <a href="/my_courses" class="btn btn-default indent-left voffset3"
          popover-placement="right" popover="You can see all your courses with detailed informaiton, and update their status on this screen." popover-title="How to use My Courses" popover-trigger="mouseenter">
          <%= image_tag('ic_school_grey600_48dp.png') =%>
          <span class="text-large indent-left home-font">My Courses</span>
        </a>
        <br/>
        <a href="/user_discussions" class="btn btn-default indent-left voffset3"
          popover-placement="right" popover="Comment, and rate courses; discuss them with your team." popover-title="How to use Discussions" popover-trigger="mouseenter">
          <%= image_tag('ic_question_answer_grey600_48dp.png') =%>
          <span class="text-large indent-left home-font">Discussions & Comments</span>
        </a>
        <br/>
        <div class="indent-left voffset3">
          <input type="text" class="indent-left2" placeholder="Keywords to search" ng-model="search.text"
            tooltip="Enter text or keywords" 
            tooltip-append-to-body="true" />
          <a href="#" class="btn btn-default"
            popover-placement="right" popover="Proceed to Search" popover-trigger="mouseenter"
            ng-click="gotoSearch(search.text)">
            <%= image_tag('ic_search_grey600_48dp.png') =%>
