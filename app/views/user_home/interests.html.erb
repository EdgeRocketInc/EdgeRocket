<!-- Main content area -->
<form ng-controller="InterestsCtrl">

  <div class="transparent-bg">

    <div class="container-fluid">

      <div class="row">
        <div class="col-xs-12">
          <div class="header-1">Welcome to EdgeRocket.</div>
        </div>
      </div>

      <div class="row padding-bottom3">
        <div class="col-xs-9">
          <span>Get an edge in your career - 
            <strong class="orange">select your areas of interest</strong>.
          </span>
        </div>
        <div class="col-xs-3 text-right">
          <md-button class="md-primary md-raised" ng-disabled="selectCount<=0" ng-click="done()" id="btn-1">
            I'm Done for Now
          </md-button>
        </div>
      </div>
    
    </div>

  </div>

  <div class="container-fluid">
    <div class="row" ng-repeat="row in [0,1,2]">

      <div class="col-md-3" ng-repeat="col in [0,1,2,3]">

        <a href="#" ng-if="interests[(row*4)+col]" ng-click="clickInterest(interests[(row*4)+col])" class="tile-link">
          <div class="well-holder md-whiteframe-z1">
            <div class="tile-name">{{ interests[(row*4)+col].name }}</div>
            <div class="well well-tile">
              <div class="row voffset1">
                <div class="col-xs-12 text-center">
                  <img ng-src="{{ interests[(row*4)+col].img_url }}" />
                </div>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-10">
                    <md-checkbox ng-model="interests[(row*4)+col].cb"
                      ng-click="clickInterest(interests[(row*4)+col])" aria-label="{{ interests[(row*4)+col].name }}" class="tile-checkbox" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </a>

      </div>

    </div>

    <div class="row padding-bottom3">
      <div class="col-xs-6">
        <span ng-show="selectCount<=0" class="text-warning">* Please select at least one</span>
      </div>
      <div class="col-xs-6 text-right">
        <md-button class="md-primary md-raised" ng-disabled="selectCount<=0" ng-click="done()" id="btn-2">
          I'm Done for Now
        </md-button>
      </div>
    </div>
  </div>

</form>
