<!-- Main content area -->
<div class="container-fluid" ng-controller="InterestsCtrl">

  <form>

    <div class="row padding-bottom3">
      <div class="col-xs-12">
        <div class="header-1">Welcome to EdgeRocket.</div>
        <span>Help us give you and edge in your career and profession by <strong>selecting your areas of interest below.</strong></span>
      </div>
    </div>

    <div class="row" ng-repeat="row in [0,1,2]">

      <div class="col-md-3" ng-repeat="col in [0,1,2,3]">
        <div class="well well-tile" ng-if="interests[(row*4)+col]">
          <div class="row">
            <div class="col-xs-12">
              <div class="tile-name">{{ interests[(row*4)+col].name }}</div>
            </div>
          </div>
          <div class="row voffset1">
            <div class="col-xs-12 text-center">
              <img ng-src="{{ interests[(row*4)+col].img_url }}">
            </div>
          </div>
          <div class="row">
            <div class="col-xs-10">
              <div class="tile-count">{{ interests[(row*4)+col].num_items }} items</div>
            </div>
            <div class="col-xs-2">
              <md-checkbox ng-model="interests[(row*4)+col].cb" 
                ng-click="clickInterest(interests[(row*4)+col].cb)" aria-label="{{ interests[(row*4)+col].name }}" class="tile-checkbox" />
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="row">
      <div class="col-xs-6">
        <span ng-show="selectCount<=0" class="text-warning">Please select at least one</span>
      </div>
      <div class="col-xs-6 text-right">
        <md-button class="md-primary" ng-disabled="selectCount<=0" ng-click="done()">
          I'm Done for Now
        </md-button>
      </div>
    </div>


  </form>

</div>
