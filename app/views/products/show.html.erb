<!-- Course Details -->
<div ng-init="product_id=<%= @product.id %>;">

	<!-- Main content area -->
	<div class="container-fluid" ng-controller="ProductsCtrl">

		<div class="row">
			<div class="col-lg-12">

				<div class="panel panel-info"> 
					<div class="panel-heading">{{ course.name }}</div>
					<div class="panel-body">
						<!-- Rating -->
						<div class="rating-right">
					    	<div class="">{{rating.description}}</div>
							<rating class="{{rating.color}}" ng-model="rating.display" max="5" readonly="rating.read_only" 
								on-leave="leavingRating()">
							</rating>
						</div>

						<img src="{{ course.vendor.logo_asset_url }}" class="img-provider-logo"></img>
						<div class="">{{ course.authors }}</div>
						<div class="">{{ course.school }}</div>
						<div ng-if="course.description != null && course.description != ''" class="well">{{ course.description }}</div>
						<div class="text-right">
							<span>{{ course.price | currency }}</span>
							<span ng-if="course.price > 0 && course.price_free"> / </span>
							<span class="label label-info" ng-if="course.price_free">Free</span>
						</div>
						<div class="text-right voffset5">
							<button class="btn btn-sm btn-success" ng-click="goto()">Go to course</button>
							<button class="btn btn-sm btn-warning" ng-click="backToMyCourses()">Back to My Courses</button>
						</div>
					</div>
				</div>

			</div>
		</div> <!-- Row -->

		<div class="row">
			<div class="col-lg-12">

				<div class="panel panel-info"> 
					<div class="panel-heading">Reviews</div>
					<div class="panel-body">

						<div class="input-group">
							<textarea class="form-control textarea-discussions" placeholder="Post a review" ng-model="newReview.title"></textarea>
							<span class="input-group-btn">
								<button class="btn btn-warning btn-post-discussions" type="button" ng-click="createReview()">Post</button>
							</span>
						</div> <!-- /input-group -->
						<div class="well" ng-repeat="review in reviews">
							{{ review.title }}
							<div class="text-success text-right">{{review.user.email}}</div>
						</div>

					</div>
				</div>

			</div>
		</div>


	</div>

</div>