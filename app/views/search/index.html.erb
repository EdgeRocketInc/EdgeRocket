<!-- Modal Details window -->
<script type="text/ng-template" id="searchModalDetails.html">
  <div class="modal-header">
      <h4>{{ course.pname }}</h4>
  </div>
  <div class="modal-body">
    <div class="rating-right"><span class="glyphicon glyphicon-star rating-unknown"></span><!-- Rating --></div>
    <img src="{{ course.logo_asset_url }}" class="img-provider-logo"></img>
    <div class="">{{ course.authors }}</div>
    <div class="">{{ course.school }}</div>
    <div class="well well-sm">{{ course_description }}</div>
    <div class="text-right">
      <span>{{ course.price_fmt }}</span></div>
  </div>
  <div class="modal-footer">
      <button class="btn btn-success" ng-click="enroll()">Go to course</button>
      <button class="btn btn-warning" ng-click="cancel()">Close</button>
  </div>
</script>

