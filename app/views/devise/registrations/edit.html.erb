<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center voffset3">
      <div class="panel panel-primary">
        <div class="panel-heading">Change Password</div>

          <%= form_for(resource, as: resource_name, url: user_registration_path(resource), html: { method: :put }) do |f| %>
            <div class="panel-body">

              <%= devise_error_messages! %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'New Password' %>
              </div>
              <div>
                <%= f.password_field :password_confirmation, autocomplete: "off", 
                  class: 'form-control voffset2', placeholder: 'Confirm Password' %>
              </div>
              <div>
                <%= f.password_field :current_password, autocomplete: "off",
                  class: 'form-control voffset2', placeholder: 'Current Password'  %>
              </div>

              <div><%= f.submit "Update", class: 'btn btn-primary voffset2' %></div>

            </div>

          <% end %>

          <%= link_to("Home", controller: "/user_home", action: "index") =%>
          <span style="margin: 10px"></span>
          <%= link_to("Log out", {controller: "devise/sessions", action: "destroy"}, method: :delete) =%>

      </div>
    </div>
  </div>

