<div class="col-lg-4 col-lg-offset-4 center voffset3">
<div class="panel panel-primary">
	<div class="panel-heading">Sign In</div>
	<div class="panel-body">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="input-group">
				<%= f.label :email, class: 'input-group-addon' %>
				<%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'name@company.com' %></div>
		  	<div class="input-group voffset3">
				<%= f.label :password, class: 'input-group-addon' %>
				<%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password' %></div>
			<div class="voffset3"><%= f.submit "Sign in", class: 'btn btn-primary' %></div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>
</div>
