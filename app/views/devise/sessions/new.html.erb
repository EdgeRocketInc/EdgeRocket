<div class="container-fluid">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center voffset3">
			<%= image_tag('ER_final_logo-crop-224x43.png') %>
		</div>	
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center voffset3">
			<div class="panel panel-primary">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div class="panel-body">
						<%= f.email_field :email, autofocus: true, class: 'form-control voffset1', placeholder: 'Email' %>
						<%= f.password_field :password, autocomplete: "off", class: 'form-control voffset2', placeholder: 'password' %>
						<div class="voffset2">
							<%= f.submit "Sign in with Email", class: 'btn btn-primary form-control' %>
						</div>
						<div class="voffset2">
							<%= link_to "Sign in with LinkedIn", 
								user_omniauth_authorize_path(:linkedin), class: 'btn btn-primary form-control voffset1' %>
						</div>
						<div class="voffset2">
							<%= render "devise/shared/links" %>
						</div>
						<div class="voffset4">
							<div class="text-warning small">
								If your company enabled Single Sign In with Google,
							</div>
							<%= link_to "Sign in with Google", 
								user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-primary form-control voffset1' %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center voffset3">
			<div class="alert alert-warning">
				Don't have an account yet? Please <a style="color: blue" href="/sign_up/">sign up for a free account</a>
			</div>
		</div>
	</div>
</div>
