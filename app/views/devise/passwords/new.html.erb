<div class="container-fluid">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center voffset3">
			<%= image_tag('ER_final_logo-crop-224x43.png') =%>
		</div>	
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center voffset3">
			<div class="panel panel-primary">
				<div class="panel-heading">Forgot your password?</div>
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<div class="panel-body">
			  		<%= devise_error_messages! %>
					<%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
				  	<%= f.submit "Send me reset password instructions", class: 'btn btn-success form-control voffset1' %>
				<% end %>
				<div class="voffset3">
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>


