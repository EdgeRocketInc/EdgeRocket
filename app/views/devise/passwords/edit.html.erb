<div class="container-fluid">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center voffset3">
			<%= image_tag('ER_final_logo-crop-224x43.png') =%>
		</div>	
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center voffset3">
			<div class="panel panel-primary">
				<div class="panel-heading">Change your password</div>

				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
					<div class="panel-body">
						<%= devise_error_messages! %>
					 	<%= f.hidden_field :reset_password_token %>
					  	<div>
					  		<%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
					  	</div>
					  	<div>
						    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
						</div>
					</div>
				  	<div><%= f.submit "Change my password", class: 'btn btn-primary' %></div>
				<% end %>
				
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center voffset3">
			<div class="alert alert-warning">Access is restricted at this time, please <a style="color: blue" href="http://edgerocket.co/#subscribe">subscribe</a> to receive updates about EdgeRocket launch!</div>
		</div>
	</div>
</div>


