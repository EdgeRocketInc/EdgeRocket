
<div class="container">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-2"><%= link_to 'Create', new_playlist_path %></div>
  </div>
  <% @playlists.each do |playlist| %>
  <div class="row">
        <div class="col-lg-3"><%= playlist.title %></div>
        <div class="col-lg-2">
          <%= link_to 'Courses', {controller: "playlists", id: playlist, action: "courses"} %>
          <%= link_to 'Modify', edit_playlist_path(playlist) %>
          <%= link_to 'Delete', playlist, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
  </div>
  <% end %>
</div>