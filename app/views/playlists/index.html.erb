<table class="table-bordered">
  <thead>
    <tr>
      <th>Playlist</th>
      <th>Mandatory</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.title %></td>
        <td><%= playlist.mandatory %></td>
        <td><%= link_to 'Courses', playlist %></td>
        <td><%= link_to 'Modify', edit_playlist_path(playlist) %></td>
        <td><%= link_to 'Delete', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

